<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>
<div class="container">

    <div class="col-lg-12">
        <!-- start With captions -->
        <div class="card">
            <div class="card-body">
                <div id="carouselExampleCaptions" class="carousel slide carousel-dark" data-bs-ride="carousel">
                    <ol class="carousel-indicators">
                        {{range $idx, $val := .carousels}}
                        <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{$idx}}"
                            class="{{if eq $idx 0}}active{{end}}"></li>
                        {{end}}
                    </ol>
                    <div class="carousel-inner">
                        {{range $idx, $val := .carousels}}
                        <div class="carousel-item  {{if eq $idx 0}}active{{end}}">
                            <img src="{{.ImageUrl}}" class="d-block w-100" style="max-height: 400px; object-fit: cover;"
                                 alt="modernize-img"/>
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{.Title}}</h5>
                                <p>
                                    {{.Content}}
                                </p>
                            </div>
                        </div>
                        {{end}}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- end With captions -->
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <!-- Card 1 -->
        {{range .cards}}
        <div class="col">
            <div class="card h-100">
                <div class="ratio ratio-16x9">
                    <img src="{{.ImageUrl}}" class="card-img-top object-fit-cover rounded-top" alt="{{.Title}}">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{.Title}}</h5>
                    <p class="card-text">{{.Content | safe}}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted"></small>
                </div>
            </div>
        </div>
        {{end}}
    </div>

</div>

