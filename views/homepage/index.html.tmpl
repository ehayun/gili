<div class="container">

    <div class="col-lg-12">
        <!-- start With captions -->
        <div class="card">
            <div class="card-body">
                <div id="carouselExampleCaptions" class="carousel slide carousel-dark" data-bs-ride="carousel">
                    <ol class="carousel-indicators">
                        {{range $idx, $val := .carousels}}
                        <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{$idx}}" class="{{if eq $idx 0}}active{{end}}"></li>
                        {{end}}
                    </ol>
                    <div class="carousel-inner">
                        {{range $idx, $val := .carousels}}
                        <div class="carousel-item  {{if eq $idx 0}}active{{end}}">
                            <img src="{{.ImageUrl}}" class="d-block w-100" style="max-height: 400px; object-fit: cover;"  alt="modernize-img" />
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{.Title}}</h5>
                                <p>
                                   {{.Content}}
                                </p>
                            </div>
                        </div>
                        {{end}}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- end With captions -->
    </div>

    <div class="row">
        <div class="col-sm-6 col-lg-3">
            <div class="card shadow">
                <div class="card-body p-4">
                    <img src="/public/images/profile/user-3.jpg" alt="modernize-img" class="img-fluid rounded-circle mb-4"
                         width="80" height="80">
                    <h4 class="card-title">Charles Nunez</h4>
                    <div class="d-flex align-items-center gap-4 mb-4">
                        <div class="d-flex align-items-center">
                            <a href="javascript:void(0)">
                                <img src="/public/images/profile/user-12.jpg"
                                     class="rounded-circle me-n2 card-hover border border-white" width="32" height="32">
                            </a>
                            <a href="javascript:void(0)">
                                <img src="/public/images/profile/user-2.jpg"
                                     class="rounded-circle me-n2 card-hover border border-white" width="32" height="32">
                            </a>
                            <a href="javascript:void(0)">
                                <img src="/public/images/profile/user-3.jpg"
                                     class="rounded-circle me-n2 card-hover border border-white" width="32" height="32">
                            </a>
                        </div>
                        <p class="mb-0">3 mutual friends</p>
                    </div>
                    <button class="btn bg-primary-subtle text-primary mb-3 w-100">Add Friend</button>
                    <button class="btn bg-secondary-subtle text-secondary w-100">Remove</button>
                </div>
            </div>
        </div>


    </div>

</div>

